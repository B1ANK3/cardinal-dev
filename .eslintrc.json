{
	"extends": "eslint:recommended",
	"root": true,
	"parser": "@typescript-eslint/parser",
	"env": {
		"node": true,
		"browser": true,
		"shared-node-browser": true,
		"es2022": true
	},
	"rules": {
		"newline-per-chained-call": [
			"warn",
			{
				"ignoreChainWithDepth": 1
			}
		],
		"no-useless-catch": "warn",
		"no-undef": "warn"
	}
}
